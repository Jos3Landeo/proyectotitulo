<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <servlet>
        <servlet-name>Servlet_login</servlet-name>
        <jsp-file>/login.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>Servlet_principal</servlet-name>
        <jsp-file>/WEB-INF/paginas/principales/menuTablero.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>Servlet_MenuTareasAceptadas</servlet-name>
        <jsp-file>/WEB-INF/paginas/principales/menuTareasAceptadas.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>Servlet_MenuTareasRechazadas</servlet-name>
        <jsp-file>/WEB-INF/paginas/principales/menuTareasFinalizadas.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>Servlet_MenuTareasDesignadas</servlet-name>
        <jsp-file>/WEB-INF/paginas/principales/menuTareasDesignadas.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>Servlet_MenuTareasAsignadas</servlet-name>
        <jsp-file>/WEB-INF/paginas/principales/menuTareasAsignadas.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>Servlet_MenuFlujosDesignados</servlet-name>
        <jsp-file>/WEB-INF/paginas/principales/menuFlujosDesignados.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>Servlet_MenuFlujosAsignados</servlet-name>
        <jsp-file>/WEB-INF/paginas/principales/menuFlujosAsignadas.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>Servlet_MenuNotificaciones</servlet-name>
        <jsp-file>/WEB-INF/paginas/principales/menuNotificaciones.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>Servlet_VentanaFlujosListados</servlet-name>
        <jsp-file>/WEB-INF/paginas/ventanas/deseleccionarTareas.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>Servlet_VentanaFlujosListados_Ver</servlet-name>
        <jsp-file>/WEB-INF/paginas/ventanas/verTareasAsignadosFlujo.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Servlet_login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Servlet_principal</servlet-name>
        <url-pattern>/autorizado/tablero</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Servlet_MenuTareasAceptadas</servlet-name>
        <url-pattern>/autorizado/tareasaceptadas</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Servlet_MenuTareasDesignadas</servlet-name>
        <url-pattern>/autorizado/tareasdesignadas</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Servlet_MenuTareasAsignadas</servlet-name>
        <url-pattern>/autorizado/tareasasignadas</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Servlet_MenuTareasRechazadas</servlet-name>
        <url-pattern>/autorizado/tareasfinalizadas</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Servlet_MenuFlujosDesignados</servlet-name>
        <url-pattern>/autorizado/flujosdesignados</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Servlet_MenuFlujosAsignados</servlet-name>
        <url-pattern>/autorizado/flujosasignados</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Servlet_MenuNotificaciones</servlet-name>
        <url-pattern>/autorizado/notificaciones</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Servlet_VentanaFlujosListados</servlet-name>
        <url-pattern>/autorizado/flujosdesignados/deseleccionarTareas</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Servlet_VentanaFlujosListados_Ver</servlet-name>
        <url-pattern>/autorizado/flujosasignados/tareasVerFlujo</url-pattern>
    </servlet-mapping>
    
    
    <servlet>
        <servlet-name>Servlet_completo</servlet-name>
        <servlet-class>web.Servlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Servlet_completo</servlet-name>
        <url-pattern>/autorizado/*</url-pattern>
    </servlet-mapping>
    
    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>web.Filtro</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/autorizado/*</url-pattern>
    </filter-mapping>
    
</web-app>
